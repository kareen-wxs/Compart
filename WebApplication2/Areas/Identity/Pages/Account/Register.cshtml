@page
@model RegisterModel
<style>
main{
    margin-bottom: 100px;
    background: aliceblue;
    border: 1px solid;
    padding: 34px;

}    
.register {
        
        text-align: -webkit-center;
       
}
.form-control{
        width: 20%;
}
</style>
<div style="background: url(https://ltdfoto.ru/images/2022/12/10/1122.png); background-size:cover;" class="register">
    @if (User.IsInRole(WebApplication2.WC.AdminRole))
{
    <h1>Жаңадан админ тіркелу</h1>
}
else
{
   
}


 

    <div >

        <div class="logcontainer">
            <div class="screen">
                <div class="screen__content">

                    <form class="login" id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="login__field">
                            <i class="login__icon fa fa-user"></i>
                            <input asp-for="Input.FullName" class="login__input" placeholder="Полное имя">
                        </div>
                        <div class="login__field">
                            <i class="login__icon fa fa-lock"></i>
                            <input asp-for="Input.Email" class="login__input" placeholder="Email">
                        </div>
                        <div class="login__field">
                            <i class="login__icon fa fa-lock"></i>
                            <input asp-for="Input.PhoneNumber" class="login__input" placeholder="Номер телефона">
                        </div>
                        <div class="login__field">
                            <i class="login__icon fa fa-lock"></i>
                            <input asp-for="Input.Password" class="login__input" placeholder="Пароль">
                        </div>
                        <div class="login__field">
                            <i class="login__icon fa fa-lock"></i>
                            <input asp-for="Input.ConfirmPassword" class="login__input" placeholder="Подтвердить пароль">
                        </div>
                        <button type ="submit" class="button login__submit">
                            <span class="button__text">Регистрация</span>
                            <i class="button__icon fa fa-chevron-right"></i>
                        </button>
                    </form>

                </div>
                <div class="screen__background">
                    <span class="screen__background__shape screen__background__shape4"></span>
                    <span class="screen__background__shape screen__background__shape3"></span>
                    <span class="screen__background__shape screen__background__shape2"></span>
                    <span class="screen__background__shape screen__background__shape1"></span>
                </div>
            </div>
        </div>
    </div>
</div>